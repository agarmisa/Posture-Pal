<!DOCTYPE html>
<html>
<head>
  <link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
  <title>PosturePal</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">PosturePal</a></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">

        <li class="has-dropdown">
          <a href="#">Exercises</a>
          <ul class="dropdown">
            <li><%= link_to 'Scapular Retractions', exercise_path(Exercise.first) %></li>
            <li><%= link_to 'Cervical Retractions', exercise_path(Exercise.second) %></li>
            <li><%= link_to 'TA Contraction', exercise_path(Exercise.third) %></li>
          </ul>
        </li>

        <%- if current_user -%>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
          <li><%= link_to 'My Page', user_path(current_user) %></li>
            <% if current_user.admin? %>
                <li><%= link_to 'All Users', users_path %></li>
            <% end %>
        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
          <li><%= link_to 'Sign In with Facebook', '/auth/facebook' %></li>
        <%- end -%>
      </ul>
    </section>
  </nav>


  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
